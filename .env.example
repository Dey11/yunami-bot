# ===========================================
# Yunami Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For Coolify: Add these as environment variables in your service settings

# -------------------------------------------
# Discord Bot Configuration (Required)
# -------------------------------------------

# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=

# Your Discord application's client ID
CLIENT_ID=

# (Optional) Guild ID for development - commands will be registered instantly to this server
# Leave empty in production for global command registration
GUILD_ID=

# -------------------------------------------
# Server Configuration
# -------------------------------------------

# Base URL for the API server (used by bot to communicate with server)
# In Coolify with docker-compose: use http://server:3000
# Running locally: use http://localhost:3000
API_BASE_URL=http://localhost:3000

# Port for the server to listen on (default: 3000)
PORT=3000

# -------------------------------------------
# Database Configuration (Required)
# -------------------------------------------

# PostgreSQL connection string (Neon, Supabase, or any PostgreSQL database)
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=

# -------------------------------------------
# Optional Configuration
# -------------------------------------------

# Node environment (development | production)
NODE_ENV=production

# Log level for the bot (debug | info | warn | error)
LOG_LEVEL=info
