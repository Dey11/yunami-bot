// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ==================== MODELS ====================

model User {
  id        String   @id @default(cuid())
  discordId String   @unique
  username  String
  role      String? // Assigned after prologue completion (e.g., "leader", "scout")
  stats     Json?    // Base stats: { str, dex, int, ... }
  inventory String[] // Starting inventory items
  xp        Int      @default(0)
  level     Int      @default(1)
  lastActive DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  progress    UserProgress[]
  partyMember PartyMember[]
}

model UserProgress {
  id            String   @id @default(cuid())
  userId        String
  storyId       String // e.g., "prologue", "the-haunted-manor"
  currentNodeId String
  state         Json     @default("{}") // Choices made, flags, etc.
  status        String   @default("active") // active | completed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
  @@index([userId])
}

model Party {
  id        String   @id @default(cuid())
  code      String   @unique // Invite code (short, e.g., "ABC123")
  name      String?  // Party name
  maxSize   Int      @default(4)
  leaderId  String
  storyId   String? // The story this party is playing, if started
  status    String   @default("forming") // forming | active | completed
  // Shared message for party (single screen experience)
  sharedChannelId String?
  sharedMessageId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members PartyMember[]
}

model PartyMember {
  id        String   @id @default(cuid())
  partyId   String
  userId    String
  isReady   Boolean  @default(false)
  partyRole String?  // Party role: scout, leader, healer, warrior
  joinedAt  DateTime @default(now())

  party Party @relation(fields: [partyId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([partyId, userId])
  @@index([partyId])
  @@index([userId])
}

// Minigame/Combat state persistence
model MinigameState {
  id        String   @id @default(cuid())
  userId    String
  storyId   String
  nodeId    String
  type      String // combat | memory | sequence | social
  state     Json     @default("{}")
  status    String   @default("active") // active | completed | failed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, storyId, nodeId])
  @@index([userId])
}

// ==================== SESSION STATE ====================

// Active game session (replaces in-memory sessions Map)
model GameSession {
  id            String   @id @default(cuid())
  odId          String   @unique // Discord user ID
  storyId       String
  currentNodeId String
  choices       String[] // Choice history
  flags         Json     @default("{}")
  checkpoints   String[]
  inventory     String[]
  resources     Json     @default("{}") // { gold: 10, energy: 5 }
  partyRole     String?

  // Active message tracking
  activeChannelId String?
  activeMessageId String?
  activeMessageAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  choiceLocks   ChoiceLock[]
  votes         Vote[]
  timers        Timer[]
  combatStates  CombatState[]
  nodeVotes     NodeVote[]

  @@index([odId])
}

// Prevent duplicate choice selection
model ChoiceLock {
  id        String   @id @default(cuid())
  sessionId String
  nodeId    String
  choiceId  String
  lockedAt  DateTime @default(now())

  session GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, nodeId, choiceId])
  @@index([sessionId])
}

// Votes for timed decision nodes
model Vote {
  id        String   @id @default(cuid())
  sessionId String
  nodeId    String
  choiceId  String
  votedAt   DateTime @default(now())

  session GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, nodeId]) // One vote per node
  @@index([sessionId])
}

// Active timers
model Timer {
  id        String   @id @default(cuid())
  sessionId String
  timerId   String   // e.g., "nodeId:timer"
  nodeId    String
  startedAt DateTime @default(now())
  duration  Int      // seconds
  expiresAt DateTime

  session GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, timerId])
  @@index([sessionId])
  @@index([expiresAt])
}

// ==================== COMBAT STATE ====================

// Persisted combat state for a session/node
model CombatState {
  id        String   @id @default(cuid())
  sessionId String
  nodeId    String
  state     Json     @default("{}") // { player_hp, enemies, defending, turn }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, nodeId])
  @@index([sessionId])
}

// ==================== NODE VOTES ====================

// Votes for timed decision nodes (party voting)
model NodeVote {
  id        String   @id @default(cuid())
  sessionId String
  nodeId    String
  playerId  String   // Discord user ID of the voter
  choiceId  String
  votedAt   DateTime @default(now())

  session GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, nodeId, playerId]) // One vote per player per node
  @@index([sessionId])
  @@index([sessionId, nodeId])
}
